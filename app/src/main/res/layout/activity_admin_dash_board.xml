<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bck_new"
    tools:context=".adminDashBoard">
    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/allbooking"
                    android:layout_width="250dp"
                    android:layout_height="180dp"
                    android:onClick="total_assets"
                    android:src="@drawable/tatal_assets"
                    android:tag="all booki"
                    android:tooltipText="All bookings" />

                <TextView
                    android:id="@+id/total_asset_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="total_assets"
                    android:text="           See Total Assets"
                    android:textColor="#181616"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/allAssets"
                    android:layout_width="250dp"
                    android:layout_height="180dp"
                    android:onClick="Bookedassets"
                    android:src="@drawable/all_booking"
                    android:tag="all booki"
                    android:tooltipText="All bookings" />

                <TextView
                    android:id="@+id/booked_Asset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="Bookedassets"
                    android:text="    All Booked assets"
                    android:textColor="#181616"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/updateImage"
                    android:layout_width="250dp"
                    android:layout_height="180dp"
                    android:onClick="update"
                    android:src="@drawable/update_icon"
                    android:tag="all booki"
                    android:tooltipText="All bookings" />

                <TextView
                    android:id="@+id/update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="update"
                    android:text="      Update"
                    android:textColor="#181616"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/delete_Image"
                    android:layout_width="250dp"
                    android:layout_height="180dp"
                    android:onClick="delete"
                    android:src="@drawable/delete"
                    android:tag="all booki"
                    android:tooltipText="All bookings" />

                <TextView
                    android:id="@+id/delete_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="delete"
                    android:text="         delete"
                    android:textColor="#181616"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>